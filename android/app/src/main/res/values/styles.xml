<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_primary</item>
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
    </style>

    <!-- Victory Dark Theme -->
    <style name="VictoryTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>

    <!-- Card Styles -->
    <style name="CardView.Victory" parent="CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="contentPadding">@dimen/padding_standard</item>
    </style>

    <style name="CardView.Victory.Elevated">
        <item name="cardElevation">@dimen/elevation_floating_widget</item>
        <item name="cardBackgroundColor">@color/surface_elevated</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.Victory" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Victory.Headline" parent="TextAppearance.Victory">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_headline</item>
    </style>

    <style name="TextAppearance.Victory.Title" parent="TextAppearance.Victory">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Victory.Subtitle" parent="TextAppearance.Victory">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Victory.Body" parent="TextAppearance.Victory">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Victory.Caption" parent="TextAppearance.Victory">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.Victory" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/button_primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/touch_target_min</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
    </style>

    <style name="Button.Victory.Secondary">
        <item name="android:background">@color/button_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Button.Victory.Danger">
        <item name="android:background">@color/button_danger</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <!-- ImageButton Styles -->
    <style name="ImageButton.Victory" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/icon_primary</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="ImageButton.Victory.Floating">
        <item name="android:background">@color/widget_background</item>
        <item name="android:elevation">@dimen/elevation_floating_widget</item>
        <item name="android:tint">@color/icon_on_surface</item>
    </style>

    <!-- SeekBar Styles -->
    <style name="SeekBar.Victory" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/primary</item>
        <item name="android:progressBackgroundTint">@color/surface_secondary</item>
        <item name="android:thumbTint">@color/primary</item>
    </style>

    <!-- Switch Styles -->
    <style name="Switch.Victory" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/primary</item>
        <item name="android:trackTint">@color/surface_secondary</item>
        <item name="thumbTextPadding">@dimen/padding_small</item>
    </style>

    <!-- Dialog Styles -->
    <style name="Dialog.Victory" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/background_dialog</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorAccent">@color/accent_primary</item>
    </style>

    <!-- AlertDialog Styles -->
    <style name="AlertDialog.Victory" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/background_dialog</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="buttonBarButtonStyle">@style/Button.Victory</item>
    </style>

    <!-- Floating Widget Styles -->
    <style name="Widget.Victory.Floating" parent="">
        <item name="android:background">@color/widget_background</item>
        <item name="android:elevation">@dimen/elevation_floating_widget</item>
    </style>

    <style name="Widget.Victory.FloatingMenu" parent="Widget.Victory.Floating">
        <item name="android:elevation">@dimen/elevation_floating_menu</item>
        <item name="android:background">@color/menu_background</item>
    </style>

    <!-- Status Indicator Styles -->
    <style name="StatusIndicator.Victory" parent="">
        <item name="android:layout_width">@dimen/status_indicator_size</item>
        <item name="android:layout_height">@dimen/status_indicator_size</item>
        <item name="android:background">@android:drawable/oval_shape</item>
    </style>

    <style name="StatusIndicator.Victory.Active">
        <item name="android:backgroundTint">@color/status_active</item>
    </style>

    <style name="StatusIndicator.Victory.Ready">
        <item name="android:backgroundTint">@color/status_ready</item>
    </style>

    <style name="StatusIndicator.Victory.Inactive">
        <item name="android:backgroundTint">@color/status_inactive</item>
    </style>

    <style name="StatusIndicator.Victory.Error">
        <item name="android:backgroundTint">@color/status_error</item>
    </style>

    <!-- Layout Styles -->
    <style name="Layout.Victory.Card" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/margin_small</item>
        <item name="android:background">@color/card_background</item>
        <item name="android:padding">@dimen/padding_standard</item>
        <item name="android:elevation">@dimen/elevation_card</item>
    </style>

    <!-- Animation Styles -->
    <style name="Animation.Victory.Fade" parent="">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Animation.Victory.Slide" parent="">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <!-- Overlay Styles -->
    <style name="Overlay.Victory" parent="">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
