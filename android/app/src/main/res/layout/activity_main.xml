<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#1E1E1E">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <!-- Status Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2E2E2E"
        android:padding="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/tv_system_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waiting_for_game"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/tv_detection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detection_ready"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/tv_game_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_not_detected"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Control Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2E2E2E"
        android:padding="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control"
            android:textColor="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp" />

        <!-- Main Toggle Button -->
        <Button
            android:id="@+id/btn_toggle_helper"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Start System Helper"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="#4CAF50"
            android:layout_marginBottom="15dp" />

        <!-- Root Mode Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/root_mode_title"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/switch_root_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <!-- Settings Button -->
    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/btn_settings"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        android:layout_marginBottom="10dp" />

    <!-- About Button -->
    <Button
        android:id="@+id/btn_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/btn_about"
        android:textColor="#FFFFFF"
        android:background="#607D8B" />

    <!-- Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/version_info"
        android:textColor="#888888"
        android:textSize="12sp"
        android:gravity="center|bottom"
        android:layout_marginTop="20dp" />

</LinearLayout>
